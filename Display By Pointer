#include <stdio.h>
int main()
{
    int i,*p,n;
    printf ("Enter array size: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d numbers: ",n);
    for (i=0; i<n; i++)
    {
        scanf ("%d",&arr[i]);
    }
    p=&arr[0];
    printf ("The input numbers: ");
    for (i=0; i<n; i++)
    {
        printf ("%d ",*p++);
    }
    return 0;
}
