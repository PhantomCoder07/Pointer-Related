#include <stdio.h>
int main()
{
    int *p,n;
    printf ("Enter array size: ");
    scanf ("%d",&n);
    int arr[n];
    printf ("Enter %d numbers: ",n);
    for (p=arr; p<=arr+n-1; p++)
    {
        scanf ("%d", p);
    }
    printf ("The input numbers: ");
    for (p=arr; p<=arr+n-1; p++)
    {
        printf ("%d ",*p);
    }
    return 0;
}
